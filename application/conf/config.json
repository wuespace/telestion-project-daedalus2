		"config": {
		  "listeningAddresses": [
			"beautiful-data"
		  ]
		}
	  },
	  {
		"name": "Mongo Database Service",
		"verticle": "de.wuespace.telestion.project.daedalus2.database.MongoDatabaseService",
		"magnitude": 1,
		"config": {
			"dbPoolName": "d2Pool"
		}
	  },
	  {
		"name": "Periodic Data Aggregator",
		"verticle": "de.wuespace.telestion.project.daedalus2.database.PeriodicDataAggregator",
		"magnitude": 1,
		"config": {
		  "collection": "de.wuespace.telestion.project.daedalus2.messages.SystemT",
